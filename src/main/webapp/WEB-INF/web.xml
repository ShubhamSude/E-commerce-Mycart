<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    
    <servlet>
        <servlet-name>RegisterSevlets</servlet-name>
        <servlet-class>com.learn.mycart.servelts.RegisterSevlets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.learn.mycart.servelts.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.learn.mycart.servelts.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ProductOperationsServlet</servlet-name>
        <servlet-class>com.learn.mycart.servelts.ProductOperationsServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RegisterSevlets</servlet-name>
        <url-pattern>/RegisterSevlets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProductOperationsServlet</servlet-name>
        <url-pattern>/ProductOperationsServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
